<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>
<body style="background-color: #FEFBE4;">   
<%- include('layouts/heading'); -%>

<main>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="display-5">
                        <i class="bi bi-shield-lock-fill text-primary"></i> Hardware TPM Management
                    </h1>
                    <div>
                        <a href="/keys" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Back to Keys
                        </a>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createKeyModal">
                            <i class="bi bi-plus-lg"></i> Create TPM Key
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- TPM Status Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-<%= tpmAvailable ? 'success' : 'danger' %>">
                    <div class="card-header bg-<%= tpmAvailable ? 'success' : 'danger' %> text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-<%= tpmAvailable ? 'check-circle-fill' : 'x-circle-fill' %>"></i>
                            TPM Status
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-<%= tpmAvailable ? 'success' : 'danger' %>">
                                        <%= tpmAvailable ? 'Available' : 'Unavailable' %>
                                    </h3>
                                    <p class="text-muted">Hardware TPM</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-primary"><%= totalTPMKeys %></h3>
                                    <p class="text-muted">Total TPM Keys</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-success"><%= activeTPMKeys %></h3>
                                    <p class="text-muted">Active Keys</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-warning"><%= softwareKeys.length %></h3>
                                    <p class="text-muted">Software Keys</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hardware TPM Keys Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-shield-lock-fill text-primary"></i> Hardware TPM Keys
                        </h5>
                        <span class="badge bg-primary rounded-pill"><%= tpmKeys.length %></span>
                    </div>
                    <div class="card-body">
                        <% if (tpmKeys.length === 0) { %>
                            <div class="text-center py-4">
                                <i class="bi bi-shield-lock display-4 text-muted mb-3"></i>
                                <h5 class="text-muted">No Hardware TPM Keys</h5>
                                <p class="text-muted mb-4">Create your first hardware-backed TPM key for maximum security.</p>
                                <% if (tpmAvailable) { %>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createKeyModal">
                                        <i class="bi bi-plus-lg"></i> Create TPM Key
                                    </button>
                                <% } else { %>
                                    <p class="text-danger"><i class="bi bi-exclamation-triangle"></i> TPM hardware not available</p>
                                <% } %>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Status</th>
                                            <th>Created</th>
                                            <th>Last Used</th>
                                            <th>Usage Count</th>
                                            <th>Signatures</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% tpmKeys.forEach(key => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= key.name %></strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="bi bi-shield-check text-success"></i> Hardware TPM
                                                    </small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= key.status === 'active' ? 'success' : 'secondary' %>">
                                                        <%= key.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <%= new Date(key.createdAt).toLocaleDateString() %>
                                                    <br>
                                                    <small class="text-muted">
                                                        <%= new Date(key.createdAt).toLocaleTimeString() %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <% if (key.lastUsed) { %>
                                                        <%= new Date(key.lastUsed).toLocaleDateString() %>
                                                        <br>
                                                        <small class="text-muted">
                                                            <%= new Date(key.lastUsed).toLocaleTimeString() %>
                                                        </small>
                                                    <% } else { %>
                                                        <span class="text-muted">Never</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">
                                                        <%= key.usageCount || 0 %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-warning">
                                                        <%= keyUsageStats[key._id] || 0 %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a href="/keys/<%= key._id %>" class="btn btn-outline-info" title="View Details">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-outline-primary" onclick="generateCSR('<%= key._id %>')" title="Generate CSR">
                                                            <i class="bi bi-file-earmark-text"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-outline-danger" onclick="confirmDeleteKey('<%= key._id %>', '<%= key.name %>')" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Software Keys Comparison Section -->
        <% if (softwareKeys.length > 0) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-cpu"></i> Software Keys (For Comparison)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Usage Count</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% softwareKeys.forEach(key => { %>
                                        <tr>
                                            <td>
                                                <%= key.name %>
                                                <br>
                                                <small class="text-muted">
                                                    <i class="bi bi-cpu text-warning"></i> Software
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= key.status === 'active' ? 'success' : 'secondary' %>">
                                                    <%= key.status %>
                                                </span>
                                            </td>
                                            <td>
                                                <%= new Date(key.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <%= key.usageCount || 0 %>
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/keys/<%= key._id %>" class="btn btn-outline-info">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" onclick="confirmDeleteKey('<%= key._id %>', '<%= key.name %>')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

    </div>
</main>

<!-- Create Key Modal -->
<div class="modal fade" id="createKeyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-shield-plus"></i> Create Hardware TPM Key
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createKeyForm">
                    <div class="mb-3">
                        <label for="keyName" class="form-label">Key Name</label>
                        <input type="text" class="form-control" id="keyName" name="keyName" required 
                               placeholder="Enter a unique name for this key">
                        <div class="form-text">Choose a descriptive name to identify this hardware key</div>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Hardware TPM Key:</strong> This key will be stored securely in your computer's TPM chip and cannot be exported. It provides the highest level of security.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createTPMKey()" id="createKeyBtn">
                    <i class="bi bi-shield-plus"></i> Create Key
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteKeyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Delete TPM Key
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the key <strong id="deleteKeyName"></strong>?</p>
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Warning:</strong> This action cannot be undone. The key will be permanently removed from both the TPM chip and the database.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="deleteTPMKey()" id="confirmDeleteBtn">
                    <i class="bi bi-trash"></i> Delete Key
                </button>
            </div>
        </div>
    </div>
</div>

<%- include('layouts/footer'); -%>

<script src="/js/tpmManagement.js"></script>

</body>
</html>