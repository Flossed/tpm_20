<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>
   <body style="background-color: #FEFBE4;">   
   <%- include('layouts/heading'); -%>

    <main>
       <div class="container">
          <div class="row">
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-5">TPM Key Management</h1>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createKeyModal">
                  <i class="bi bi-plus-lg"></i> Create New Key
                </button>
              </div>
            </div>
          </div>
          
          <!-- Alert Messages -->
          <% if (typeof success !== 'undefined' && success) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
          <% } %>
          
          <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
          <% } %>
          
          <!-- Keys List -->
          <div class="row">
            <div class="col-12">
              <% if (typeof keys !== 'undefined' && keys.length > 0) { %>
              <div class="card">
                <div class="card-header">
                  <h5 class="mb-0">Available Keys</h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Status</th>
                          <th>Created</th>
                          <th>Last Used</th>
                          <th>Usage Count</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% keys.forEach(function(key) { %>
                        <tr>
                          <td>
                            <div class="d-flex align-items-center">
                              <i class="bi bi-key-fill text-primary me-2"></i>
                              <div>
                                <strong><%= key.name %></strong>
                                <% if (key.metadata && key.metadata.get && key.metadata.get('description')) { %>
                                <br><small class="text-muted"><%= key.metadata.get('description') %></small>
                                <% } %>
                              </div>
                            </div>
                          </td>
                          <td>
                            <% if (key.status === 'active') { %>
                            <span class="badge bg-success">Active</span>
                            <% } else if (key.status === 'inactive') { %>
                            <span class="badge bg-warning">Inactive</span>
                            <% } else { %>
                            <span class="badge bg-secondary"><%= key.status %></span>
                            <% } %>
                          </td>
                          <td>
                            <small><%= new Date(key.createdAt).toLocaleDateString() %></small>
                          </td>
                          <td>
                            <% if (key.lastUsed) { %>
                            <small><%= new Date(key.lastUsed).toLocaleDateString() %></small>
                            <% } else { %>
                            <small class="text-muted">Never</small>
                            <% } %>
                          </td>
                          <td>
                            <span class="badge bg-info"><%= key.usageCount || 0 %></span>
                          </td>
                          <td>
                            <div class="btn-group" role="group">
                              <a href="/keys/<%= key._id %>" class="btn btn-outline-primary btn-sm" title="View Details">
                                <i class="bi bi-eye"></i>
                              </a>
                              <% if (key.status === 'active') { %>
                              <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete('<%= key._id %>', '<%= key.name %>')" title="Delete Key">
                                <i class="bi bi-trash"></i>
                              </button>
                              <% } %>
                            </div>
                          </td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <% } else { %>
              <div class="text-center py-5">
                <i class="bi bi-key display-1 text-muted mb-3"></i>
                <h3 class="text-muted">No Keys Found</h3>
                <p class="lead text-muted mb-4">Create your first TPM key to get started with document signing</p>
                <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#createKeyModal">
                  <i class="bi bi-plus-lg"></i> Create Your First Key
                </button>
              </div>
              <% } %>
            </div>
          </div>
       </div>
    </main>
    
    <!-- Create Key Modal -->
    <div class="modal fade" id="createKeyModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Create New TPM Key</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <form id="createKeyForm">
            <div class="modal-body">
              <div class="mb-3">
                <label for="keyName" class="form-label">Key Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="keyName" name="keyName" required 
                       placeholder="Enter a unique name for your key">
                <div class="form-text">Must be unique and contain only alphanumeric characters, hyphens, and underscores</div>
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" 
                          placeholder="Optional description for this key"></textarea>
              </div>
              <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>Note:</strong> This will create an ES256 keypair using your hardware TPM module for enhanced security.
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">
                <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                Create Key
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteKeyModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Delete Key</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="alert alert-danger">
              <i class="bi bi-exclamation-triangle"></i>
              <strong>Warning!</strong> This action cannot be undone.
            </div>
            <p>Are you sure you want to delete the key "<span id="deleteKeyName"></span>"?</p>
            <p class="text-muted">This will permanently remove the key from both the database and the TPM module.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
              <span class="spinner-border spinner-border-sm d-none" role="status"></span>
              Delete Key
            </button>
          </div>
        </div>
      </div>
    </div>

    <%- include('layouts/footer'); -%>
    <script src="/js/keys.js"></script>
   </body>
</html>