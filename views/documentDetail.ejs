<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>
   <body style="background-color: #FEFBE4;">   
   <%- include('layouts/heading'); -%>

    <main>
       <div class="container">
          <div class="row">
            <div class="col-12">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                  <li class="breadcrumb-item"><a href="/documents">Documents</a></li>
                  <li class="breadcrumb-item active"><%= document.fileName %></li>
                </ol>
              </nav>
              
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-5">
                  <% if (document.fileType === 'text') { %>
                  <i class="bi bi-file-earmark-text text-primary"></i>
                  <% } else if (document.fileType === 'markdown') { %>
                  <i class="bi bi-file-earmark-code text-info"></i>
                  <% } else if (document.fileType === 'json') { %>
                  <i class="bi bi-file-earmark-code text-warning"></i>
                  <% } else { %>
                  <i class="bi bi-file-earmark text-secondary"></i>
                  <% } %>
                  <%= document.fileName %>
                </h1>
                <div class="btn-group" role="group">
                  <a href="/documents/<%= document._id %>/sign" class="btn btn-success">
                    <i class="bi bi-pen"></i> Sign Document
                  </a>
                  <button type="button" class="btn btn-outline-primary" onclick="downloadDocument()">
                    <i class="bi bi-download"></i> Download
                  </button>
                  <button type="button" class="btn btn-outline-danger" onclick="confirmDelete('<%= document._id %>', '<%= document.fileName %>')">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </div>
              </div>
            </div>
          </div>
          
          <div class="row">
            <!-- Document Information -->
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-header">
                  <h5 class="mb-0"><i class="bi bi-info-circle"></i> Document Information</h5>
                </div>
                <div class="card-body">
                  <dl class="row">
                    <dt class="col-sm-5">File Name:</dt>
                    <dd class="col-sm-7"><%= document.fileName %></dd>
                    
                    <dt class="col-sm-5">Type:</dt>
                    <dd class="col-sm-7">
                      <% if (document.fileType === 'text') { %>
                      <span class="badge bg-primary">Text</span>
                      <% } else if (document.fileType === 'markdown') { %>
                      <span class="badge bg-info">Markdown</span>
                      <% } else if (document.fileType === 'json') { %>
                      <span class="badge bg-warning">JSON</span>
                      <% } else { %>
                      <span class="badge bg-secondary"><%= document.fileType %></span>
                      <% } %>
                    </dd>
                    
                    <dt class="col-sm-5">Size:</dt>
                    <dd class="col-sm-7"><%= (document.size / 1024).toFixed(2) %> KB</dd>
                    
                    <dt class="col-sm-5">Uploaded:</dt>
                    <dd class="col-sm-7"><small><%= new Date(document.uploadedAt).toLocaleString() %></small></dd>
                    
                    <dt class="col-sm-5">Uploaded By:</dt>
                    <dd class="col-sm-7"><%= document.uploadedBy %></dd>
                    
                    <dt class="col-sm-5">SHA-256 Hash:</dt>
                    <dd class="col-sm-7">
                      <code class="small"><%= document.hash %></code>
                      <button type="button" class="btn btn-outline-primary btn-sm ms-2" onclick="copyToClipboard('documentHash')">
                        <i class="bi bi-clipboard"></i>
                      </button>
                      <input type="hidden" id="documentHash" value="<%= document.hash %>">
                    </dd>
                  </dl>
                </div>
              </div>
              
              <!-- Signature Statistics -->
              <div class="card mb-4">
                <div class="card-header">
                  <h5 class="mb-0"><i class="bi bi-graph-up"></i> Signature Statistics</h5>
                </div>
                <div class="card-body text-center">
                  <div class="row">
                    <div class="col-6">
                      <div class="border-end">
                        <h3 class="text-success"><%= signatures ? signatures.length : 0 %></h3>
                        <small class="text-muted">Total Signatures</small>
                      </div>
                    </div>
                    <div class="col-6">
                      <h3 class="text-info">
                        <%= signatures ? signatures.filter(s => s.verificationStatus === 'valid').length : 0 %>
                      </h3>
                      <small class="text-muted">Valid Signatures</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Document Content -->
            <div class="col-lg-8">
              <div class="card mb-4">
                <div class="card-header">
                  <h5 class="mb-0"><i class="bi bi-file-text"></i> Document Content</h5>
                </div>
                <div class="card-body">
                  <div class="mb-3">
                    <% if (document.fileType === 'json') { %>
                    <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><%= JSON.stringify(JSON.parse(document.content), null, 2) %></pre>
                    <% } else if (document.fileType === 'markdown') { %>
                    <div class="mb-2">
                      <div class="btn-group btn-group-sm" role="group">
                        <input type="radio" class="btn-check" name="viewMode" id="viewRaw" checked>
                        <label class="btn btn-outline-primary" for="viewRaw">Raw</label>
                        <input type="radio" class="btn-check" name="viewMode" id="viewRendered">
                        <label class="btn btn-outline-primary" for="viewRendered">Rendered</label>
                      </div>
                    </div>
                    <pre id="rawContent" class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><%= document.content %></pre>
                    <div id="renderedContent" class="d-none bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"></div>
                    <% } else { %>
                    <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><%= document.content %></pre>
                    <% } %>
                  </div>
                  <button type="button" class="btn btn-outline-primary btn-sm" onclick="copyToClipboard('documentContent')">
                    <i class="bi bi-clipboard"></i> Copy Content
                  </button>
                  <textarea class="d-none" id="documentContent"><%= document.content %></textarea>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Signatures Section -->
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                  <h5 class="mb-0"><i class="bi bi-pen"></i> Digital Signatures</h5>
                  <a href="/documents/<%= document._id %>/sign" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-lg"></i> Add Signature
                  </a>
                </div>
                <div class="card-body">
                  <% if (signatures && signatures.length > 0) { %>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>Key Used</th>
                          <th>Signed At</th>
                          <th>Signed By</th>
                          <th>Verification</th>
                          <th>Last Verified</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% signatures.forEach(function(signature) { %>
                        <tr>
                          <td>
                            <div class="d-flex align-items-center">
                              <i class="bi bi-key-fill text-primary me-2"></i>
                              <strong><%= signature.keyId.name %></strong>
                            </div>
                          </td>
                          <td>
                            <small><%= new Date(signature.signedAt).toLocaleString() %></small>
                          </td>
                          <td>
                            <small><%= signature.signedBy %></small>
                          </td>
                          <td>
                            <% if (signature.verificationStatus === 'valid') { %>
                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Valid</span>
                            <% } else if (signature.verificationStatus === 'invalid') { %>
                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Invalid</span>
                            <% } else { %>
                            <span class="badge bg-secondary"><i class="bi bi-question-circle"></i> Unverified</span>
                            <% } %>
                          </td>
                          <td>
                            <% if (signature.lastVerified) { %>
                            <small><%= new Date(signature.lastVerified).toLocaleString() %></small>
                            <% } else { %>
                            <small class="text-muted">Never</small>
                            <% } %>
                          </td>
                          <td>
                            <div class="btn-group" role="group">
                              <button type="button" class="btn btn-outline-success btn-sm" 
                                      onclick="verifySignature('<%= signature._id %>')">
                                <i class="bi bi-shield-check"></i> Verify
                              </button>
                              <button type="button" class="btn btn-outline-info btn-sm" 
                                      onclick="showSignatureDetails('<%= signature._id %>')">
                                <i class="bi bi-info-circle"></i> Details
                              </button>
                              <button type="button" class="btn btn-outline-danger btn-sm" 
                                      onclick="confirmDeleteSignature('<%= signature._id %>', '<%= signature.keyId.name %>')">
                                <i class="bi bi-trash"></i> Delete
                              </button>
                            </div>
                          </td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                  <% } else { %>
                  <div class="text-center py-4">
                    <i class="bi bi-pen display-4 text-muted mb-3"></i>
                    <h5 class="text-muted">No Signatures Yet</h5>
                    <p class="text-muted mb-4">This document has not been digitally signed.</p>
                    <a href="/documents/<%= document._id %>/sign" class="btn btn-primary">
                      <i class="bi bi-pen"></i> Sign This Document
                    </a>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Signed Documents Section -->
          <div class="row">
            <div class="col-12">
              <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                  <h5 class="mb-0"><i class="bi bi-file-earmark-check"></i> Signed Documents</h5>
                  <button type="button" class="btn btn-outline-primary btn-sm" onclick="refreshSignedDocuments()">
                    <i class="bi bi-arrow-clockwise"></i> Refresh
                  </button>
                </div>
                <div class="card-body">
                  <div id="signedDocumentsContainer">
                    <div class="text-center py-3">
                      <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
       </div>
    </main>
    
    <!-- Signature Details Modal -->
    <div class="modal fade" id="signatureDetailsModal" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Signature Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div id="signatureDetailsContent">
              <!-- Content will be loaded dynamically -->
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Delete Signature Confirmation Modal -->
    <div class="modal fade" id="deleteSignatureModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Delete Signature</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="alert alert-warning">
              <i class="bi bi-exclamation-triangle"></i>
              <strong>Warning!</strong> This action cannot be undone.
            </div>
            <p>Are you sure you want to delete the signature created with key "<span id="deleteSignatureKeyName"></span>"?</p>
            <p class="text-muted"><strong>Note:</strong> Deleting this signature will allow you to sign the document with a different key.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmDeleteSignatureBtn">
              <span class="spinner-border spinner-border-sm d-none" role="status"></span>
              Delete Signature
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Delete Document Confirmation Modal -->
    <div class="modal fade" id="deleteDocumentModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Delete Document</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="alert alert-danger">
              <i class="bi bi-exclamation-triangle"></i>
              <strong>Warning!</strong> This action cannot be undone.
            </div>
            <p>Are you sure you want to delete the document "<span id="deleteDocumentName"></span>"?</p>
            <p class="text-muted"><strong>Note:</strong> Documents with existing signatures cannot be deleted.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
              <span class="spinner-border spinner-border-sm d-none" role="status"></span>
              Delete Document
            </button>
          </div>
        </div>
      </div>
    </div>

    <%- include('layouts/footer'); -%>
    <script src="/js/documentDetail.js"></script>
   </body>
</html>