{
  "name": "tpm_20",
  "version": "0.0.0",
  "description": "TPM 2.0 application for creating ES256 keypairs and signing documents using hardware TPM",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flossed/tpm_20.git"
  },
  "scripts": {
    "start": "nodemon index.js",
    "dev": "nodemon index.js",
    "updateVersions": "node updateVersions",
    "test": "mocha  --recursive --timeout 10000 --exit",
    "test:watch": "mocha   --recursive --watch",
    "test:coverage": "nyc mocha   --recursive",
    "test:single": "mocha"
  },
  "author": "Daniel S .A. Khan (c)",
  "license": "MIT",
  "devDependencies": {
    "chai": "^5.2.1",
    "eslint": "^9.15.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.15",
    "nyc": "^17.1.0"  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "test/**",
      "node_modules/**"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  },
  "keywords": [
    "TPM",
    "ES256",
    "Digital Signature",
    "Hardware Security"
  ],
  "bugs": {
    "url": "https://github.com/Flossed/tpm_20/issues"
  },
  "homepage": "https://github.com/Flossed/tpm_20#readme",
  "dependencies": {
    "@zandd/app-logger": "^1.0.2",    
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.10.5",
    "cors": "^2.8.5",    
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "express-session": "^1.18.2",
    "mongoose": "^8.0.0",
    "nconf": "^0.12.1",    
    "serve-favicon": "^2.5.0",
    "node-forge": "^1.3.1",
    "elliptic": "^6.5.4",
    "multer": "^1.4.5-lts.1"
  }
}
